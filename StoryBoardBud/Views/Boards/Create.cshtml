@{
    ViewData["Title"] = "Create New Storyboard";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">Create New Storyboard</h4>
                </div>
                <div class="card-body">
                    <form method="post" action="@Url.Action("Create")">
                        @Html.AntiForgeryToken()
                        <div class="mb-3">
                            <label for="title" class="form-label">Board Title</label>
                            <input type="text" class="form-control" id="title" name="title" required 
                                   placeholder="e.g., My Movie Idea, Product Design, etc.">
                        </div>

                        <div class="mb-3">
                            <label for="description" class="form-label">Description (Optional)</label>
                            <textarea class="form-control" id="description" name="description" rows="3"
                                      placeholder="Describe what this storyboard is about..."></textarea>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary flex-grow-1">Create Board</button>
                            <a href="@Url.Action("MyBoards")" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
