@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid mt-5">
    <h2 class="mb-4">Admin Dashboard</h2>

    <div class="row g-4">
        <div class="col-md-6 col-lg-3">
            <div class="card text-center">
                <div class="card-body">
                    <h6 class="card-title">Manage Users</h6>
                    <a href="@Url.Action("Users")" class="btn btn-primary btn-sm">View All</a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card text-center">
                <div class="card-body">
                    <h6 class="card-title">Review Reports</h6>
                    <a href="@Url.Action("Reports")" class="btn btn-warning btn-sm">Review</a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card text-center">
                <div class="card-body">
                    <h6 class="card-title">System Settings</h6>
                    <button class="btn btn-secondary btn-sm" disabled>Coming Soon</button>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card text-center">
                <div class="card-body">
                    <h6 class="card-title">Audit Logs</h6>
                    <button class="btn btn-secondary btn-sm" disabled>Coming Soon</button>
                </div>
            </div>
        </div>
    </div>
</div>
