@model IEnumerable<StoryBoardBud.Data.Report>

@{
    ViewData["Title"] = "Review Reports";
    var currentPage = (int?)ViewBag.CurrentPage ?? 1;
    var totalPages = (int?)ViewBag.TotalPages ?? 1;
    var selectedStatus = (StoryBoardBud.Data.ReportStatus?)ViewBag.SelectedStatus;
}

<div class="container-fluid mt-5">
    <h2 class="mb-4">Report Management</h2>

    <div class="mb-3">
        <a href="@Url.Action("Reports", new { status = (StoryBoardBud.Data.ReportStatus?)null })" 
           class="btn btn-sm @(selectedStatus == null ? "btn-primary" : "btn-outline-primary")">All</a>
        <a href="@Url.Action("Reports", new { status = StoryBoardBud.Data.ReportStatus.Pending })" 
           class="btn btn-sm @(selectedStatus == StoryBoardBud.Data.ReportStatus.Pending ? "btn-warning" : "btn-outline-warning")">Pending</a>
        <a href="@Url.Action("Reports", new { status = StoryBoardBud.Data.ReportStatus.Approved })" 
           class="btn btn-sm @(selectedStatus == StoryBoardBud.Data.ReportStatus.Approved ? "btn-danger" : "btn-outline-danger")">Approved</a>
        <a href="@Url.Action("Reports", new { status = StoryBoardBud.Data.ReportStatus.Rejected })" 
           class="btn btn-sm @(selectedStatus == StoryBoardBud.Data.ReportStatus.Rejected ? "btn-success" : "btn-outline-success")">Rejected</a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <p>No reports to review.</p>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Photo</th>
                        <th>Reported By</th>
                        <th>Reason</th>
                        <th>Description</th>
                        <th>Status</th>
                        <th>Created</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var report in Model)
                    {
                        <tr>
                            <td>
                                <img src="/@report.Photo.FilePath" alt="Photo" style="max-width: 50px; max-height: 50px;">
                            </td>
                            <td>@report.ReportedBy.UserName</td>
                            <td>@report.Reason</td>
                            <td>@(report.Description ?? "-")</td>
                            <td>
                                @if (report.Status == StoryBoardBud.Data.ReportStatus.Pending)
                                {
                                    <span class="badge bg-warning">Pending</span>
                                }
                                else if (report.Status == StoryBoardBud.Data.ReportStatus.Approved)
                                {
                                    <span class="badge bg-danger">Approved</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">Rejected</span>
                                }
                            </td>
                            <td>@report.CreatedAt.ToString("g")</td>
                            <td>
                                @if (report.Status == StoryBoardBud.Data.ReportStatus.Pending)
                                {
                                    <form method="post" action="@Url.Action("ApproveReport")" style="display: inline;">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@report.Id">
                                        <input type="hidden" name="adminNotes" value="">
                                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Approve this report?')">Approve</button>
                                    </form>
                                    <form method="post" action="@Url.Action("RejectReport")" style="display: inline;">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@report.Id">
                                        <input type="hidden" name="adminNotes" value="">
                                        <button type="submit" class="btn btn-sm btn-success">Reject</button>
                                    </form>
                                }
                                else
                                {
                                    <small class="text-muted">@report.ReviewedAt?.ToString("g")</small>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (totalPages > 1)
        {
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    @if (currentPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" href="?page=1">First</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="?page=@(currentPage - 1)">Previous</a>
                        </li>
                    }

                    @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                    {
                        @if (i == currentPage)
                        {
                            <li class="page-item active"><span class="page-link">@i</span></li>
                        }
                        else
                        {
                            <li class="page-item"><a class="page-link" href="?page=@i">@i</a></li>
                        }
                    }

                    @if (currentPage < totalPages)
                    {
                        <li class="page-item">
                            <a class="page-link" href="?page=@(currentPage + 1)">Next</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="?page=@totalPages">Last</a>
                        </li>
                    }
                </ul>
            </nav>
        }
    }
</div>
