@model StoryBoardBud.Data.ApplicationUser

@{
    ViewData["Title"] = "User Detail - " + Model.UserName;
    var roles = (IList<string>)ViewBag.Roles;
    var boardsCount = (int)ViewBag.BoardsCount;
    var photosCount = (int)ViewBag.PhotosCount;
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4>@Model.UserName</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Email:</dt>
                        <dd class="col-sm-9">@Model.Email</dd>

                        <dt class="col-sm-3">Full Name:</dt>
                        <dd class="col-sm-9">@(Model.FullName ?? "-")</dd>

                        <dt class="col-sm-3">Bio:</dt>
                        <dd class="col-sm-9">@(Model.BioDescription ?? "-")</dd>

                        <dt class="col-sm-3">Roles:</dt>
                        <dd class="col-sm-9">
                            @if (roles.Any())
                            {
                                @string.Join(", ", roles)
                            }
                            else
                            {
                                <span class="text-muted">User</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Boards:</dt>
                        <dd class="col-sm-9">@boardsCount</dd>

                        <dt class="col-sm-3">Photos Uploaded:</dt>
                        <dd class="col-sm-9">@photosCount</dd>

                        <dt class="col-sm-3">Created:</dt>
                        <dd class="col-sm-9">@Model.CreatedAt.ToString("g")</dd>

                        <dt class="col-sm-3">Status:</dt>
                        <dd class="col-sm-9">
                            @if (Model.LockoutEnd.HasValue && Model.LockoutEnd > DateTimeOffset.UtcNow)
                            {
                                <span class="badge bg-danger">Locked</span>
                            }
                            else
                            {
                                <span class="badge bg-success">Active</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">Actions</h6>
                </div>
                <div class="card-body">
                    @if (Model.LockoutEnd.HasValue && Model.LockoutEnd > DateTimeOffset.UtcNow)
                    {
                        <form method="post" action="@Url.Action("UnlockUser")" class="mb-2">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@Model.Id">
                            <button type="submit" class="btn btn-sm btn-success w-100">Unlock User</button>
                        </form>
                    }
                    else
                    {
                        <form method="post" action="@Url.Action("LockUser")" class="mb-2">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@Model.Id">
                            <button type="submit" class="btn btn-sm btn-warning w-100" onclick="return confirm('Lock this user?')">Lock User</button>
                        </form>
                    }

                    <form method="post" action="@Url.Action("DeleteUser")">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.Id">
                        <button type="submit" class="btn btn-sm btn-danger w-100" onclick="return confirm('Delete user and all their content? This cannot be undone.')">Delete User</button>
                    </form>
                </div>
            </div>

            <a href="@Url.Action("Users")" class="btn btn-secondary mt-3 w-100">Back to Users</a>
        </div>
    </div>
</div>
